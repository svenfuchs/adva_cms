<h3>Edit Category</h3>

<% form_for :category, @category, :url => admin_category_path, :html => {:method => :put} do |f| %>
  <fieldset>
  	<p>
      <%= f.label :title %>
      <%= f.text_field :title %>
    </p>
    <p>  
      <%= f.label :permalink %>
      <%= f.text_field :permalink %>
    </p>
  </fieldset>
  <p class="buttons">
  	<%= submit_tag 'Save' %>	
  	<%= link_to 'Delete', admin_category_path, { :confirm => "Are you sure you wish to delete this category?", :method => :delete } %>
  </p>
<% end %>