<ul id="menu_global" class="clearing">
  <% if current_user.has_role?(:superuser) %>
    <li><%= admin_global_select_tag request.path %></li>
  <% elsif Site.multi_sites_enabled %>
    <li><%= admin_site_select_tag request.path, current_user %></li>
  <% end %>
  <% if @site %>
    <li><%= link_to 'Plugins', admin_plugins_path(@site) %></li>
  <% end %>
  <li>Logged in as: <%= link_to current_user.name, (@site ? admin_site_user_path(@site, current_user) : admin_user_path(current_user)) %></li>
  <li><%= link_to 'Logout', logout_path, :method => :delete %></li>
</ul>
