<div class="entry clearing" id="<%= dom_id post %>">
  <div class="meta">
    <p>
      <%= post.created_at.to_s(:long) %>
    </p>
    <p>
      <%= gravatar_img post.author %>
      <%= post.author_link %><br>
      <%= post.author.roles.map(&:name).map(&:to_s).map(&:camelize).join(', ') %><br> <!-- TODO -->
    </p>
  </div>
  <div class="body">
    <%= post.body_html %>
    <p class="util">
      <% authorized_tag :span, :update, @topic do %>
        <%= link_to 'edit', edit_topic_post_returning_path(@section, @topic, post) %>
      <% end %>
      <% authorized_tag :span, :update, @topic do %>
        &middot; <%= link_to 'delete', topic_post_returning_path(@section, @topic, post), { :confirm => "Are you sure you wish to delete this post?", :method => :delete } %>
      <% end %>    
    </p>
  </div>
</div>