<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
  <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
  <title>Admin <%= controller.controller_name %></title>
  <%= stylesheet_link_tag :admin, :cache => true %>
  <%= javascript_include_tag :common, :admin, :cache => true %>
	<%= javascript_tag "window._auth_token = #{form_authenticity_token.inspect}" %>
</head>
<body>
	<%= @menu.build(self).root.render(:id => 'top') %>
	<%= render :partial => 'admin/shared/header' %>
	<div id="page">
		<%= yield :form if @content_for_form %>
		<div class="main">
			<%= @menu.root.find(:main).try(:render, :id => 'main_menu') %>
      <%= render :partial => 'shared/flash' %>
			<div id="content">
        <%= yield %>
			</div>
		</div>
   	<div id="sidebar" class="right">
     	<%= yield :sidebar %>
   	</div>
    <%= '</form>' if @content_for_form %>
		<div id="left" class="collapsed">
		</div>
  </div>
</body>
</html>
